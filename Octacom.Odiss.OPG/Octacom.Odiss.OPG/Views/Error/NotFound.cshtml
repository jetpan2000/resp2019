@{
    Layout = "~/Views/Shared/_LayoutError.cshtml";
    ViewBag.Title = "Page Not Found";
}
<div class="container">
    <div class="jumbotron">
        <h1><i class="glyphicon glyphicon-remove red"></i> Page Not Found</h1>
        <p class="lead">We couldn't find what you're looking for.</p>
        <p>
            <a href="javascript:document.location.reload(true);" class="btn btn-default btn-lg text-center"><span class="">Try this page again</span></a>
            <a href="@Url.Content("~/")" class="btn btn-default btn-lg"><span class="">Take me to the homepage</span></a>
        </p>
    </div>
</div>
<div class="container">
    <div class="body-content">
        <div class="row">
            <div class="col-md-6">
                <h2>What happened?</h2>
                <p class="lead">A page not found error implies that the file or page that you're looking for could not be found or is no longer available.</p>
            </div>
            <div class="col-md-6">
                <h2>What can I do?</h2>
                <p class="lead">If you're a site user</p>
                <p>Please use your browser's back button and check that you're in the right place. If you need immediate assistance, please send us an email.</p>
            </div>
        </div>
    </div>
</div>