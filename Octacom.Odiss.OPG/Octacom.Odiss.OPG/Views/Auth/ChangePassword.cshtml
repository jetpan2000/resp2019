@model ChangePasswordIndex
@{
    Layout = null;
    ViewBag.Title = Words.ChangePassword + " - " + ConfigBase.Settings.Name;
}
<!DOCTYPE html>
<html lang="@Language">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="author" content="Octacom">
    @if (!string.IsNullOrEmpty(ConfigBase.Settings.ShortcutIcon))
    {
        <link href="data:image/png;base64,@ConfigBase.Settings.ShortcutIcon" rel="shortcut icon">
    }
    else
    {
        <link type="image/x-icon" href="@Url.Content("~/content/img/octa-icon.png")" rel="icon">
        <link href="@Url.Content("~/content/img/octa-icon.png")" rel="shortcut icon">
    }
    <title>@ViewBag.Title</title>
    @Styles.Render("~/content/min/css/changepassword")
    <!--[if lt IE 9]>
    @Scripts.Render("~/content/min/js/ie8")
    <![endif]-->
    <!--
    Octacom Odiss: @Octacom.Odiss.OPG.Code.OdissVersion.Get
    -->
</head>
<body class="base@(ConfigBase.Settings.ColorScheme)">
    <div class="center-login out">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default text-center">
                        <div class="panel-body">
                            <br />
                            <div class="center"><img src="data:image/png;base64,@ConfigBase.Settings.Logo" alt="@ConfigBase.Settings.Name" /></div>
                            @using (Html.BeginForm("ChangePassword", "Auth", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { autocomplete = "off", @class = "formcp" }))
                            {
                                @Html.AntiForgeryToken()
                                <h1 class="form-changep-heading">@Words.ChangePassword_ChangeToContinue</h1>
                                @Html.LabelFor(m => m.NewPassword, "NewPassword", new { @class = "sr-only" })
                                @Html.PasswordFor(m => m.NewPassword, new { maxlength = 16, @class = "form-control pass1", placeholder = Words.Password_New, required = "required", autofocus = "autofocus" })
                                @Html.LabelFor(m => m.ConfirmNewPassword, "ConfirmNewPassword", new { @class = "sr-only" })
                                @Html.PasswordFor(m => m.ConfirmNewPassword, new { maxlength = 16, @class = "form-control pass2", placeholder = Words.Password_ConfirmNew, required = "required" })
                                if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                        @Html.Raw(HttpUtility.HtmlDecode(Html.ValidationMessage(string.Empty).ToHtmlString()))
                                    </div>
                                }
                                <input type="submit" value="@Words.ChangePassword_SaveContinue" class="btn btn-lg btn-success btn-block" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/content/min/js/base")
    <!--[if lte IE 9]>
    <script src="@Url.Content("~/Content/js/libs/jquery.placeholder.js")"></script>
    <script>
        /* HTML5 Placeholder doesn't work in IE 9 or lower. Workaround = Gambi */
        $('input, textarea').placeholder({customClass:'ie9-placeholder'});
    </script>
    <![endif]-->
    <script>
        $(document).ready(function () {
            $(".formcp input:text").eq(0).focus();
        });
    </script>
</body>
</html>