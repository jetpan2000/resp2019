<div class="modal fade" tabindex="-1" role="dialog" id="modSessionDisconnected" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="@Words.Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridSystemModalLabel"><span class="glyphicon glyphicon-alert"></span> @Words.Login_SessionTimeout</h4>
                </div>
                <div class="modal-body">
                    @Words.Login_SessionSigninToContinue
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnSignInAgain">@Words.Login_SigninMessage</button>
                </div>
            </form>
        </div>
    </div>
</div>
