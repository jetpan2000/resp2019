<div class="modal fade" tabindex="-1" role="dialog" id="modChangePassword" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form>
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="@Words.Close"><span style="float:left;margin:5px 5px 0px 0px;font-size:12px;">@Words.Close</span><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridSystemModalLabel">@Words.Password_ChangeYour: @User.UserName</h4>
                </div>
                <div class="modal-body">
                    <div id="boxMainChangePassword">
                        <div class="form-group">
                            <label for="txtCPCurrentPassword" class="control-label">@Words.Password_Current:</label>
                            <input type="password" class="form-control" id="txtCPCurrentPassword">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="txtCPNewPassword" class="control-label">@Words.Password_New:</label>
                                    <input type="password" class="form-control" id="txtCPNewPassword">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="txtCPConfirmNewPassword" class="control-label">@Words.Password_ConfirmNew:</label>
                                    <input type="password" class="form-control" id="txtCPConfirmNewPassword">
                                </div>
                            </div>
                        </div>
                        <div class="alert alert-danger" role="alert" style="display:none;" id="boxErrorChangePassword">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span id="spanErrorChangePassword"></span>
                        </div>
                    </div>
                    <div class="alert alert-success" role="alert" style="display:none;" id="boxSuccessChangePassword">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        <span id="spanSuccessChangePassword"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Words.Close</button>
                    <button type="button" class="btn btn-primary" id="btnChangePassword">@Words.ChangePassword</button>
                </div>
            </form>
        </div>
    </div>
</div>
